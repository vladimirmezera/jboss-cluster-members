<?xml version="1.0" encoding="UTF-8"?>
<arquillian
        xmlns="http://jboss.org/schema/arquillian"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">



    <container qualifier="widlfly-managed" default="true">
        <configuration>
            <property name="jbossHome">target/wildfly-10.1.0.Final/</property>
            <property name="javaVmArguments">-Djboss.socket.binding.port-offset=0</property>
            <property name="serverConfig">standalone-ha.xml</property>
            <property name="managementPort">9990</property>
        </configuration>
    </container>

